{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    // A linha abaixo é importante, mas o "include" geralmente já resolve.
    // "typeRoots": ["./node_modules/@types", "./src/types"]
  },
  "include": [
    "src/**/*" // Esta linha garante que a pasta "src/types" seja lida
  ],
  "exclude": ["node_modules"]
}